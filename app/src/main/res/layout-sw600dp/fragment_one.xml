<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kjohnson.sunriseapp.presentation.ui.activities.SunriseActivity">

    <TextView
        android:id="@+id/sunriseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunrise"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:hint="Latitude"
        android:id="@+id/latitudeEdTxt"
        android:layout_marginBottom="204dp"
        android:layout_above="@+id/requestSunriseHourBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <Button
        android:text="Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/requestSunriseHourBtn"
        android:layout_marginBottom="263dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Longitude"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/sunriseTextView"
        android:layout_alignEnd="@+id/sunriseTextView"
        android:layout_marginRight="56dp"
        android:layout_marginEnd="56dp"
        android:id="@+id/longitudeEdTxt" />

</RelativeLayout>